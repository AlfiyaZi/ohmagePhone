<?xml version="1.0" encoding="UTF-8"?>
<campaign>
	<campaignUrn>urn:andwellness:adhd</campaignUrn>
	<campaignName>ADHD</campaignName>
	<!-- <campaignVersion>1.0</campaignVersion> -->
	<serverUrl>https://dev.andwellness.org/</serverUrl>
	<surveys>
		<survey>
			<id>adhd_study_questions</id>
			<title>Survey</title>
			<description>An ADHD game, a set of survey questions, and a second ADHD game.</description>
			<submitText>Thank you for completing the survey!</submitText>
			<showSummary>true</showSummary>
			<editSummary>true</editSummary>
			<summaryText>summaryText</summaryText>
			<anytime>false</anytime>
			<contentList>
				<prompt>
					<id>firstGame</id>
					<displayType>event</displayType>
					<displayLabel>First ADHD Game</displayLabel>
					<promptText>Press "Play" to play the game.</promptText>
					<abbreviatedText>abbreviatedText</abbreviatedText>
					<explanationText>explanationText</explanationText>
					<promptType>remote_activity</promptType>
					<properties>
						<property>
							<key>package</key>
							<label>edu.ucla.cens.ADHD.Game</label>
						</property>
						<property>
							<key>activity</key>
							<label>edu.ucla.cens.ADHD.Game.Game</label>
						</property>
						<property>
							<key>action</key>
							<label>edu.ucla.cens.ADHD.Game.LAUNCH</label>
						</property>
						<property>
							<key>autolaunch</key>
							<label>false</label>
						</property>
						<property>
							<key>retries</key>
							<label>9999</label>
						</property>
					</properties>
					<skippable>false</skippable>
				</prompt>
			</contentList>
		</survey>
	</surveys>
</campaign>