<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/entity_header_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/halfgutter"
        android:paddingLeft="@dimen/gutter"
        android:paddingRight="@dimen/gutter"
        android:paddingTop="@dimen/halfgutter" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampling interval:" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                a=""
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:contentDescription="@string/mobility_radio_button_off_description"
                    android:text="Off" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_1min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/mobility_radio_button_1min_description"
                    android:text="1 min" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/radio_5min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/mobility_radio_button_5min_description"
                    android:text="5 min" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/gutter" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#e8e8e8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Most recent mobility modes (last 20 minutes)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/darkgray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#89b8db" />

        <ListView
            android:id="@+id/mobility_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/prompt_response_item_bg" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/prompt_response_item_bg"
            android:text="No mobility modes were collected recently." />
"

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/gutter" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#e8e8e8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Number of mobility points since last login:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/darkgray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#e8e8e8"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="To upload"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/darkgray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#89b8db" />

                <TextView
                    android:id="@+id/mobility_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prompt_response_item_bg" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#e8e8e8"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="In database"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/darkgray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#89b8db" />

                <TextView
                    android:id="@+id/mobility_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prompt_response_item_bg" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#e8e8e8"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Last successful upload"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/darkgray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#89b8db" />

        <TextView
            android:id="@+id/last_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/prompt_response_item_bg" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/upload_all_container_height"
        android:background="@drawable/entity_header_background" >

        <Button
            android:id="@+id/upload_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/entity_action_button"
            android:contentDescription="@string/upload_button_description"
            android:text="Upload Now" />
    </RelativeLayout>

</LinearLayout>