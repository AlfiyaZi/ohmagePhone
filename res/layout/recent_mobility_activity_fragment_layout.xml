<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/gutter" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#e8e8e8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Today"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#89b8db" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gutter"
        android:background="@drawable/prompt_response_item_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/recent_mobility_still"
            style="@style/RecentMobilityState"
            android:drawableTop="@drawable/img_mobility_still" />

        <TextView
            android:id="@+id/recent_mobility_walk"
            style="@style/RecentMobilityState"
            android:drawableTop="@drawable/img_mobility_walk" />

        <TextView
            android:id="@+id/recent_mobility_run"
            style="@style/RecentMobilityState"
            android:drawableTop="@drawable/img_mobility_run" />

        <TextView
            android:id="@+id/recent_mobility_drive"
            style="@style/RecentMobilityState"
            android:drawableTop="@drawable/img_mobility_drive" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#e8e8e8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Hours Active"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#89b8db" />

    <FrameLayout
        android:id="@+id/feedback_response_graph"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#e8e8e8"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Average amout active"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/darkgray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#e8e8e8"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/recent_mobility_aggregate_baseline_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darkgray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#89b8db" />

            <TextView
                android:id="@+id/aggregate_baseline_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/prompt_response_item_bg"
                android:text="@string/empty_value" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#e8e8e8"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/recent_mobility_aggregate_last_week_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darkgray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="#89b8db" />

            <TextView
                android:id="@+id/aggregate_lastweek_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/prompt_response_item_bg"
                android:text="@string/empty_value" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>