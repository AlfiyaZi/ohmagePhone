<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dip" >

            <TextView
                style="@style/ContentHeader"
                android:text="CHARTS" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >

                <RelativeLayout
                    android:layout_width="210px"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Exercise" />

                    <FrameLayout
                        android:id="@+id/chart2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@+id/textView1" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@+id/chart2"
                    android:background="@color/lightgray" />

                <RelativeLayout
                    android:layout_width="210px"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Diet" />

                    <FrameLayout
                        android:id="@+id/chart1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignTop="@+id/chart2"
                        android:layout_margin="4dp"
                        android:layout_toRightOf="@+id/textView2" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/chart3"
                    android:layout_width="65dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/feedback_charts_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/entity_action_button"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="More" />

            <TextView
                style="@style/ContentHeader"
                android:text="RESPONSES" />

            <FrameLayout
                android:id="@+id/feedback_response_graph"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/feedback_response_history_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/entity_action_button"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="More" />
        </LinearLayout>
    </ScrollView>

</merge>