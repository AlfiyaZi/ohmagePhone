<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dip" >

            <TextView
                style="@style/ContentHeader"
                android:text="COMPARE" />

            <LinearLayout
                android:id="@+id/feedback_compare_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" />

            <TextView
                style="@style/ContentHeader"
                android:text="CHARTS" />

            <LinearLayout
                android:id="@+id/feedback_chart_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" />

            <Button
                android:id="@+id/feedback_charts_more"
                style="@style/InfoButton"
                android:layout_gravity="right"
                android:layout_marginRight="12dip"
                android:drawableLeft="@null"
                android:text="More Charts" />

            <TextView
                style="@style/ContentHeader"
                android:text="RESPONSES" />

            <FrameLayout
                android:id="@+id/feedback_response_graph"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="12dip" >

                <Button
                    android:id="@+id/feedback_response_history_calendar"
                    style="@style/InfoButton"
                    android:drawableLeft="@drawable/ic_info_calendar"
                    android:text="View Calendar" />

                <Button
                    android:id="@+id/feedback_response_history_map"
                    style="@style/InfoButton"
                    android:drawableLeft="@drawable/location_map"
                    android:text="View Map" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</merge>